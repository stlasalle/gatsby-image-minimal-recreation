{
  "include": ["./src/**/*"],
  "compilerOptions": {
    "baseUrl": "src",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "Node",
    "lib": ["dom", "es2017"],
    "allowJs": true,
    // "checkJs": true,
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "skipLibCheck": true,
    "paths": {
      "@components/*": ["components/*"],
      "@theme/*": ["theme/*"],
    }
  }
}
